<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CanYouDrink.MainPage">

    <StackLayout>
        <Frame x:Name="Back" BackgroundColor="Blue" Padding="24" CornerRadius="0">
            <Label x:Name="Out" Text="Enter Your Age And Submit!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <!--<Editor x:Name="Age" Placeholder="Age"></Editor>-->
        <DatePicker x:Name="Age"></DatePicker>
        <Label x:Name="Err" TextColor="DarkRed"></Label>
        <Button Text="Submit" Clicked="Button_Clicked"></Button>
    </StackLayout>

</ContentPage>
